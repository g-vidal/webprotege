<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            margin-top: 5px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 20px;
            padding: 2px;
            box-shadow: 0 2px 5px #909090;
            background-color: white;
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }
        .removeButton {
            align-self: flex-end;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:SimplePanel ui:field="viewContainer"/>
        <g:Button ui:field="removeButton" text="Remove" addStyleNames="{style.removeButton} {wp.buttons.button} {wp.buttons.smallPageButton} {wp.buttons.primaryButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>